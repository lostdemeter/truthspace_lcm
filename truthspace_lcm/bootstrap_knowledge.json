{
  "version": "1.1",
  "description": "Bootstrap knowledge for GeometricLCM - meta-knowledge about language structure",
  
  "extraction_patterns": [
    {
      "name": "is_the_X_of",
      "regex": "([A-Z][a-z]+(?:\\s+[A-Z]?[a-z]+)*)\\s+is\\s+the\\s+(\\w+)\\s+of\\s+(?:the\\s+)?([A-Z][a-z]+(?:\\s+[A-Z]?[a-z]+)*)",
      "groups": ["entity1", "role", "entity2"],
      "fact": ["entity2", "has_{role}", "entity1"],
      "description": "X is the Y of Z -> (Z, has_Y, X)"
    },
    {
      "name": "is_a",
      "regex": "([A-Z][a-z]+(?:\\s+[A-Z]?[a-z]+)*)\\s+(?:is|was)\\s+(?:a|an)\\s+(\\w+)",
      "groups": ["entity", "type"],
      "fact": ["entity", "is_a", "type"],
      "description": "X is a Y -> (X, is_a, Y)"
    },
    {
      "name": "wrote",
      "regex": "([A-Z][a-z]+(?:\\s+[A-Z]?[a-z]+)*)\\s+wrote\\s+([A-Z][a-z]+(?:\\s+[A-Z]?[a-z]+)*)",
      "groups": ["author", "work"],
      "fact": ["author", "wrote", "work"],
      "description": "X wrote Y -> (X, wrote, Y)"
    },
    {
      "name": "attacked",
      "regex": "([A-Z][a-z]+)\\s+attacked\\s+(?:the\\s+)?([A-Z]?[a-z]+)",
      "groups": ["attacker", "target"],
      "fact": ["attacker", "attacked", "target"],
      "description": "X attacked Y -> (X, attacked, Y)"
    },
    {
      "name": "killed",
      "regex": "([A-Z][a-z]+)\\s+killed\\s+(?:the\\s+)?([A-Z]?[a-z]+)",
      "groups": ["killer", "victim"],
      "fact": ["killer", "killed", "victim"],
      "description": "X killed Y -> (X, killed, Y)"
    },
    {
      "name": "struck",
      "regex": "([A-Z][a-z]+)\\s+struck\\s+(?:the\\s+)?([A-Z]?[a-z]+)",
      "groups": ["striker", "target"],
      "fact": ["striker", "struck", "target"],
      "description": "X struck Y -> (X, struck, Y)"
    },
    {
      "name": "is_in",
      "regex": "([A-Z][a-z]+(?:\\s+[A-Z]?[a-z]+)*)\\s+(?:is|was)\\s+in\\s+([A-Z][a-z]+(?:\\s+[A-Z]?[a-z]+)*)",
      "groups": ["entity", "location"],
      "fact": ["entity", "located_in", "location"],
      "description": "X is in Y -> (X, located_in, Y)"
    },
    {
      "name": "went_to",
      "regex": "([A-Z][a-z]+)\\s+(?:went|traveled|sailed|came)\\s+to\\s+(?:the\\s+)?([A-Z]?[a-z]+)",
      "groups": ["entity", "destination"],
      "fact": ["entity", "went_to", "destination"],
      "description": "X went to Y -> (X, went_to, Y)"
    },
    {
      "name": "and_association",
      "regex": "([A-Z][a-z]+)\\s+and\\s+([A-Z][a-z]+)",
      "groups": ["entity1", "entity2"],
      "fact": ["entity1", "associated_with", "entity2"],
      "description": "X and Y -> (X, associated_with, Y)"
    },
    {
      "name": "title_role",
      "regex": "(Captain|King|Queen|Lord|Sir|Doctor|Professor|Mr|Mrs)\\s+([A-Z][a-z]+)",
      "groups": ["title", "name"],
      "fact": ["name", "role", "title"],
      "description": "Title X -> (X, role, title)"
    },
    {
      "name": "said",
      "regex": "([A-Z][a-z]+)\\s+(?:said|replied|asked|cried|shouted|exclaimed|muttered|whispered)",
      "groups": ["speaker"],
      "fact": ["speaker", "speaks", "true"],
      "description": "X said -> (X, speaks, true)"
    },
    {
      "name": "called",
      "regex": "called\\s+([A-Z][a-z]+)",
      "groups": ["name"],
      "fact": ["name", "is_a", "named_entity"],
      "description": "called X -> (X, is_a, named_entity)"
    },
    {
      "name": "named",
      "regex": "named\\s+([A-Z][a-z]+)",
      "groups": ["name"],
      "fact": ["name", "is_a", "named_entity"],
      "description": "named X -> (X, is_a, named_entity)"
    },
    {
      "name": "loved",
      "regex": "([A-Z][a-z]+)\\s+loved\\s+([A-Z][a-z]+)",
      "groups": ["lover", "beloved"],
      "fact": ["lover", "loves", "beloved"],
      "description": "X loved Y -> (X, loves, Y)"
    },
    {
      "name": "married",
      "regex": "([A-Z][a-z]+)\\s+(?:married|wed)\\s+([A-Z][a-z]+)",
      "groups": ["spouse1", "spouse2"],
      "fact": ["spouse1", "married_to", "spouse2"],
      "description": "X married Y -> (X, married_to, Y)"
    },
    {
      "name": "met",
      "regex": "([A-Z][a-z]+)\\s+met\\s+([A-Z][a-z]+)",
      "groups": ["person1", "person2"],
      "fact": ["person1", "met", "person2"],
      "description": "X met Y -> (X, met, Y)"
    },
    {
      "name": "saw",
      "regex": "([A-Z][a-z]+)\\s+saw\\s+([A-Z][a-z]+)",
      "groups": ["observer", "observed"],
      "fact": ["observer", "saw", "observed"],
      "description": "X saw Y -> (X, saw, Y)"
    },
    {
      "name": "told",
      "regex": "([A-Z][a-z]+)\\s+told\\s+([A-Z][a-z]+)",
      "groups": ["speaker", "listener"],
      "fact": ["speaker", "told", "listener"],
      "description": "X told Y -> (X, told, Y)"
    },
    {
      "name": "gave",
      "regex": "([A-Z][a-z]+)\\s+gave\\s+(?:\\w+\\s+to\\s+)?([A-Z][a-z]+)",
      "groups": ["giver", "receiver"],
      "fact": ["giver", "gave_to", "receiver"],
      "description": "X gave to Y -> (X, gave_to, Y)"
    },
    {
      "name": "followed",
      "regex": "([A-Z][a-z]+)\\s+followed\\s+([A-Z][a-z]+)",
      "groups": ["follower", "followed"],
      "fact": ["follower", "followed", "followed"],
      "description": "X followed Y -> (X, followed, Y)"
    },
    {
      "name": "helped",
      "regex": "([A-Z][a-z]+)\\s+helped\\s+([A-Z][a-z]+)",
      "groups": ["helper", "helped"],
      "fact": ["helper", "helped", "helped"],
      "description": "X helped Y -> (X, helped, Y)"
    },
    {
      "name": "feared",
      "regex": "([A-Z][a-z]+)\\s+feared\\s+([A-Z][a-z]+)",
      "groups": ["fearer", "feared"],
      "fact": ["fearer", "fears", "feared"],
      "description": "X feared Y -> (X, fears, Y)"
    },
    {
      "name": "hated",
      "regex": "([A-Z][a-z]+)\\s+hated\\s+([A-Z][a-z]+)",
      "groups": ["hater", "hated"],
      "fact": ["hater", "hates", "hated"],
      "description": "X hated Y -> (X, hates, Y)"
    },
    {
      "name": "lived_in",
      "regex": "([A-Z][a-z]+)\\s+lived\\s+in\\s+([A-Z][a-z]+)",
      "groups": ["person", "place"],
      "fact": ["person", "lives_in", "place"],
      "description": "X lived in Y -> (X, lives_in, Y)"
    },
    {
      "name": "born_in",
      "regex": "([A-Z][a-z]+)\\s+(?:was\\s+)?born\\s+in\\s+([A-Z][a-z]+)",
      "groups": ["person", "place"],
      "fact": ["person", "born_in", "place"],
      "description": "X born in Y -> (X, born_in, Y)"
    },
    {
      "name": "died_in",
      "regex": "([A-Z][a-z]+)\\s+died\\s+in\\s+([A-Z][a-z]+)",
      "groups": ["person", "place"],
      "fact": ["person", "died_in", "place"],
      "description": "X died in Y -> (X, died_in, Y)"
    },
    {
      "name": "works_for",
      "regex": "([A-Z][a-z]+)\\s+(?:works|worked)\\s+for\\s+([A-Z][a-z]+)",
      "groups": ["employee", "employer"],
      "fact": ["employee", "works_for", "employer"],
      "description": "X works for Y -> (X, works_for, Y)"
    },
    {
      "name": "belongs_to",
      "regex": "([A-Z][a-z]+)\\s+(?:belongs|belonged)\\s+to\\s+([A-Z][a-z]+)",
      "groups": ["thing", "owner"],
      "fact": ["thing", "belongs_to", "owner"],
      "description": "X belongs to Y -> (X, belongs_to, Y)"
    },
    {
      "name": "friend_of",
      "regex": "([A-Z][a-z]+)\\s+(?:is|was)\\s+(?:a\\s+)?friend\\s+of\\s+([A-Z][a-z]+)",
      "groups": ["friend1", "friend2"],
      "fact": ["friend1", "friend_of", "friend2"],
      "description": "X is friend of Y -> (X, friend_of, Y)"
    },
    {
      "name": "enemy_of",
      "regex": "([A-Z][a-z]+)\\s+(?:is|was)\\s+(?:an?\\s+)?enemy\\s+of\\s+([A-Z][a-z]+)",
      "groups": ["enemy1", "enemy2"],
      "fact": ["enemy1", "enemy_of", "enemy2"],
      "description": "X is enemy of Y -> (X, enemy_of, Y)"
    },
    {
      "name": "son_of",
      "regex": "([A-Z][a-z]+)(?:,|\\s+(?:is|was))\\s+(?:the\\s+)?son\\s+of\\s+([A-Z][a-z]+)",
      "groups": ["son", "parent"],
      "fact": ["son", "son_of", "parent"],
      "description": "X son of Y -> (X, son_of, Y)"
    },
    {
      "name": "daughter_of",
      "regex": "([A-Z][a-z]+)(?:,|\\s+(?:is|was))\\s+(?:the\\s+)?daughter\\s+of\\s+([A-Z][a-z]+)",
      "groups": ["daughter", "parent"],
      "fact": ["daughter", "daughter_of", "parent"],
      "description": "X daughter of Y -> (X, daughter_of, Y)"
    },
    {
      "name": "father_of",
      "regex": "([A-Z][a-z]+)(?:,|\\s+(?:is|was))\\s+(?:the\\s+)?father\\s+of\\s+([A-Z][a-z]+)",
      "groups": ["father", "child"],
      "fact": ["father", "father_of", "child"],
      "description": "X father of Y -> (X, father_of, Y)"
    },
    {
      "name": "mother_of",
      "regex": "([A-Z][a-z]+)(?:,|\\s+(?:is|was))\\s+(?:the\\s+)?mother\\s+of\\s+([A-Z][a-z]+)",
      "groups": ["mother", "child"],
      "fact": ["mother", "mother_of", "child"],
      "description": "X mother of Y -> (X, mother_of, Y)"
    },
    {
      "name": "brother_of",
      "regex": "([A-Z][a-z]+)(?:,|\\s+(?:is|was))\\s+(?:the\\s+)?brother\\s+of\\s+([A-Z][a-z]+)",
      "groups": ["brother", "sibling"],
      "fact": ["brother", "brother_of", "sibling"],
      "description": "X brother of Y -> (X, brother_of, Y)"
    },
    {
      "name": "sister_of",
      "regex": "([A-Z][a-z]+)(?:,|\\s+(?:is|was))\\s+(?:the\\s+)?sister\\s+of\\s+([A-Z][a-z]+)",
      "groups": ["sister", "sibling"],
      "fact": ["sister", "sister_of", "sibling"],
      "description": "X sister of Y -> (X, sister_of, Y)"
    },
    {
      "name": "quote_start",
      "regex": "\"([^\"]+)\"\\s+said\\s+([A-Z][a-z]+)",
      "groups": ["quote", "speaker"],
      "fact": ["speaker", "said_quote", "true"],
      "description": "\"...\" said X -> (X, said_quote, true)"
    },
    {
      "name": "thought",
      "regex": "([A-Z][a-z]+)\\s+thought",
      "groups": ["thinker"],
      "fact": ["thinker", "thinks", "true"],
      "description": "X thought -> (X, thinks, true)"
    },
    {
      "name": "knew",
      "regex": "([A-Z][a-z]+)\\s+knew\\s+([A-Z][a-z]+)",
      "groups": ["knower", "known"],
      "fact": ["knower", "knows", "known"],
      "description": "X knew Y -> (X, knows, Y)"
    },
    {
      "name": "wanted",
      "regex": "([A-Z][a-z]+)\\s+wanted\\s+([A-Z][a-z]+)",
      "groups": ["wanter", "wanted"],
      "fact": ["wanter", "wants", "wanted"],
      "description": "X wanted Y -> (X, wants, Y)"
    }
  ],
  
  "question_patterns_v2": [
    {
      "name": "who_is",
      "regex": "who\\s+is\\s+(.+?)\\??$",
      "groups": ["entity"],
      "query_type": "describe_entity",
      "focus": "character"
    },
    {
      "name": "what_is_the_x_of_y",
      "regex": "what\\s+(?:is|was)\\s+the\\s+(\\w+)\\s+of\\s+(.+?)\\??$",
      "groups": ["relation", "entity"],
      "query_type": "relation_query",
      "relation_map": {"capital": "has_capital", "author": "wrote", "captain": "has_captain", "king": "has_king", "president": "has_president"}
    },
    {
      "name": "what_is",
      "regex": "what\\s+is\\s+(?:the\\s+)?(.+?)\\??$",
      "groups": ["entity"],
      "query_type": "describe_entity"
    },
    {
      "name": "who_wrote",
      "regex": "who\\s+wrote\\s+(.+?)\\??$",
      "groups": ["work"],
      "query_type": "inverse_query",
      "relation": "wrote"
    },
    {
      "name": "who_killed",
      "regex": "who\\s+killed\\s+(.+?)\\??$",
      "groups": ["victim"],
      "query_type": "inverse_query",
      "relation": "killed"
    },
    {
      "name": "where_is",
      "regex": "where\\s+is\\s+(.+?)\\??$",
      "groups": ["entity"],
      "query_type": "relation_query",
      "relations": ["located_in", "located_at"]
    },
    {
      "name": "tell_me_about",
      "regex": "tell\\s+me\\s+about\\s+(.+?)\\??$",
      "groups": ["entity"],
      "query_type": "describe_entity"
    }
  ],
  
  "word_classes": {
    "question_words": ["who", "what", "where", "when", "why", "how", "which"],
    "articles": ["the", "a", "an"],
    "pronouns": {
      "subject": ["he", "she", "it", "they", "we", "i", "you"],
      "object": ["him", "her", "it", "them", "us", "me", "you"],
      "possessive": ["his", "her", "its", "their", "our", "my", "your"]
    },
    "prepositions": {
      "location": ["in", "on", "at", "near", "by", "inside", "outside", "above", "below"],
      "direction": ["to", "from", "toward", "into", "onto", "through"],
      "time": ["before", "after", "during", "until", "since"]
    },
    "conjunctions": ["and", "or", "but", "yet", "so", "for", "nor"],
    "auxiliary_verbs": ["is", "are", "was", "were", "be", "been", "being", "has", "have", "had", "do", "does", "did"],
    "modal_verbs": ["can", "could", "will", "would", "shall", "should", "may", "might", "must"],
    "common_verbs": {
      "possession": ["has", "have", "had", "owns", "owned", "possesses"],
      "creation": ["wrote", "created", "made", "built", "founded", "invented"],
      "movement": ["went", "goes", "traveled", "sailed", "walked", "ran", "moved"],
      "communication": ["said", "told", "asked", "replied", "shouted", "whispered", "cried"],
      "action": ["killed", "attacked", "struck", "hit", "fought", "chased"]
    },
    "role_indicators": ["captain", "king", "queen", "president", "leader", "chief", "master", "lord", "sir", "doctor", "professor"]
  },
  
  "sentence_templates": {
    "is_a": {
      "patterns": [
        {"template": "[ENTITY] is a [TYPE]", "extract": ["subject", "is_a", "object"]},
        {"template": "[ENTITY] is an [TYPE]", "extract": ["subject", "is_a", "object"]},
        {"template": "[ENTITY], the [TYPE]", "extract": ["subject", "is_a", "object"]},
        {"template": "[ENTITY] was a [TYPE]", "extract": ["subject", "is_a", "object"]}
      ],
      "description": "Entity type/class membership"
    },
    "role_of": {
      "patterns": [
        {"template": "[ENTITY] is the [ROLE] of [ENTITY2]", "extract": ["entity2", "has_role", "entity", "role"]},
        {"template": "[ENTITY] is the [ROLE] of the [ENTITY2]", "extract": ["entity2", "has_role", "entity", "role"]},
        {"template": "[ROLE] [ENTITY]", "extract": ["entity", "role", "role_word"]}
      ],
      "description": "Role/position relationships"
    },
    "location": {
      "patterns": [
        {"template": "[ENTITY] is in [PLACE]", "extract": ["subject", "located_in", "object"]},
        {"template": "[ENTITY] is at [PLACE]", "extract": ["subject", "located_at", "object"]},
        {"template": "[ENTITY] lives in [PLACE]", "extract": ["subject", "lives_in", "object"]},
        {"template": "[ENTITY] went to [PLACE]", "extract": ["subject", "went_to", "object"]},
        {"template": "[ENTITY] sailed to [PLACE]", "extract": ["subject", "sailed_to", "object"]}
      ],
      "description": "Location/place relationships"
    },
    "creation": {
      "patterns": [
        {"template": "[ENTITY] wrote [WORK]", "extract": ["subject", "wrote", "object"]},
        {"template": "[ENTITY] created [WORK]", "extract": ["subject", "created", "object"]},
        {"template": "[ENTITY] built [THING]", "extract": ["subject", "built", "object"]},
        {"template": "[ENTITY] founded [ORG]", "extract": ["subject", "founded", "object"]}
      ],
      "description": "Creation/authorship relationships"
    },
    "action": {
      "patterns": [
        {"template": "[ENTITY] killed [ENTITY2]", "extract": ["subject", "killed", "object"]},
        {"template": "[ENTITY] attacked [ENTITY2]", "extract": ["subject", "attacked", "object"]},
        {"template": "[ENTITY] struck [ENTITY2]", "extract": ["subject", "struck", "object"]},
        {"template": "[ENTITY] chased [ENTITY2]", "extract": ["subject", "chased", "object"]}
      ],
      "description": "Action relationships"
    },
    "association": {
      "patterns": [
        {"template": "[ENTITY] and [ENTITY2]", "extract": ["subject", "associated_with", "object"]},
        {"template": "[ENTITY] with [ENTITY2]", "extract": ["subject", "with", "object"]}
      ],
      "description": "Association/co-occurrence"
    },
    "speech": {
      "patterns": [
        {"template": "[ENTITY] said", "extract": ["subject", "speaks", "true"]},
        {"template": "[ENTITY] replied", "extract": ["subject", "speaks", "true"]},
        {"template": "[ENTITY] asked", "extract": ["subject", "speaks", "true"]},
        {"template": "[ENTITY] cried", "extract": ["subject", "speaks", "true"]}
      ],
      "description": "Speech acts (marks entity as speaker/character)"
    }
  },
  
  "question_patterns": {
    "who_is": {
      "patterns": ["who is [ENTITY]", "who was [ENTITY]", "who are [ENTITY]"],
      "query_type": "describe_entity",
      "focus": "character"
    },
    "what_is": {
      "patterns": ["what is [ENTITY]", "what is the [ENTITY]", "what was [ENTITY]"],
      "query_type": "describe_entity",
      "focus": "thing"
    },
    "what_is_the_x_of_y": {
      "patterns": ["what is the [RELATION] of [ENTITY]", "what was the [RELATION] of [ENTITY]"],
      "query_type": "relation_query",
      "relation_map": {
        "capital": "capital_of",
        "author": "wrote",
        "captain": "has_captain",
        "king": "has_king",
        "leader": "has_leader"
      }
    },
    "who_did_x": {
      "patterns": ["who wrote [ENTITY]", "who created [ENTITY]", "who killed [ENTITY]", "who attacked [ENTITY]"],
      "query_type": "inverse_query",
      "relation_map": {
        "wrote": "wrote",
        "created": "created",
        "killed": "killed",
        "attacked": "attacked"
      }
    },
    "where_is": {
      "patterns": ["where is [ENTITY]", "where was [ENTITY]", "where does [ENTITY] live"],
      "query_type": "relation_query",
      "relations": ["located_in", "located_at", "lives_in"]
    },
    "tell_me_about": {
      "patterns": ["tell me about [ENTITY]", "describe [ENTITY]", "what do you know about [ENTITY]"],
      "query_type": "describe_entity"
    }
  },
  
  "relation_properties": {
    "is_a": {
      "inverse": null,
      "transitive": true,
      "description": "Type/class membership"
    },
    "located_in": {
      "inverse": "contains",
      "transitive": true,
      "description": "Location containment"
    },
    "wrote": {
      "inverse": "written_by",
      "transitive": false,
      "description": "Authorship"
    },
    "capital_of": {
      "inverse": "has_capital",
      "transitive": false,
      "description": "Capital city relationship"
    },
    "associated_with": {
      "inverse": "associated_with",
      "transitive": false,
      "symmetric": true,
      "description": "General association"
    }
  },
  
  "entity_type_indicators": {
    "person": {
      "title_words": ["mr", "mrs", "ms", "miss", "dr", "captain", "king", "queen", "lord", "sir", "professor"],
      "suffix_patterns": ["_jr", "_sr", "_iii"],
      "context_verbs": ["said", "replied", "thought", "felt", "walked", "ran"]
    },
    "place": {
      "prepositions": ["in", "at", "to", "from", "near"],
      "suffix_words": ["city", "town", "village", "country", "island", "sea", "ocean", "river", "mountain"]
    },
    "thing": {
      "articles": ["the", "a", "an"],
      "context": ["is a", "was a", "is the"]
    }
  },
  
  "stop_words": [
    "the", "a", "an", "and", "or", "but", "in", "on", "at", "to", "for",
    "of", "with", "by", "from", "as", "is", "was", "are", "were", "been",
    "be", "have", "has", "had", "do", "does", "did", "will", "would",
    "could", "should", "may", "might", "must", "shall", "can", "need",
    "this", "that", "these", "those", "i", "you", "he", "she", "it",
    "we", "they", "what", "which", "who", "whom", "whose", "where",
    "when", "why", "how", "all", "each", "every", "both", "few", "more",
    "most", "other", "some", "such", "no", "nor", "not", "only", "own",
    "same", "so", "than", "too", "very", "just", "also", "now", "here"
  ]
}
